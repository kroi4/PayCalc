<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.screens.AddItemFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/buttonSelectStartDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_start_date_and_time"
            android:padding="8dp" />

        <Button
            android:id="@+id/buttonSelectEndDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/select_end_date_and_time"
            android:padding="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/calculatedResultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_hours"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:paddingTop="16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish"
        android:id="@+id/finish_btn"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>
